					<posy>186</posy>
					<width>520</width>
					<height>480</height>
					<include>Common_Color_Keyback1</include>
				</control>	
				
				<control type="group">
				
				<control type="image">
					<posx>20</posx>
					<posy>186</posy>
					<width>520</width>
					<height>290</height>
					<fadetime>800</fadetime>
					<include>Common_Color_Keyback2</include>
				</control>

				<control type="image">
						<posx>20</posx>
						<posy>186</posy>
						<width>520</width>
						<height>290</height>
						<fadetime>800</fadetime>
						<aspectratio>stretch</aspectratio>
						<texture background="true" fallback="splash/splash_movies.png">$INFO[ListItem.Art(fanart)]</texture>
					</control>
					
					<control type="label">
						<!--Movie title-->
						<visible>Container.Content(movies) + IsEmpty(Control.GetLabel(7017)) + !stringcompare(ListItem.Label,..)</visible>
						<posx>35</posx>
						<posy>400</posy>
						<include>Common_Panel_Title</include>
						<label>$INFO[ListItem.Label]</label>
						<shadowcolor>ff000000</shadowcolor>
					</control>
					
					<control type="label">
						<visible>Container.Content(seasons) + !stringcompare(ListItem.Label,..)</visible>
						<visible>Skin.HasSetting(UseTVLogos)</visible>
						<posx>30</posx>
						<posy>485</posy>
						<include>Common_Panel_Title</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
					
					<control type="label">
						<visible>stringcompare(ListItem.Label,..)</visible>
						<posx>30</posx>
						<posy>485</posy>
						<include>Common_Panel_Title</include>
						<label>$LOCALIZE[31194]</label>
					</control>
					
					<control type="image" id="7017">
						<visible>Container.Content(tvshows) | Container.Content(seasons) | Container.Content(movies)</visible>
						<visible>Skin.HasSetting(UseTVLogos)</visible>
						<posx>15</posx>
						<posy>380</posy>
						<width>550</width>
						<height>90</height>
						<texture background="true">$INFO[ListItem.path]logo.png</texture>
						<fadetime>100</fadetime>
						<aspectratio scalediffuse="false">keep</aspectratio>
					</control>
					
					<control type="image">
						<posx>290</posx>
						<posy>186</posy>
						<width>250</width>
						<height>50</height>
						<texture>general/movieset.png</texture>
						<visible>ListItem.IsFolder + Container.Content(movies)</visible>
						<visible>Skin.HasSetting(UseMovieset)</visible>
						<visible>!stringcompare(ListItem.Label,..)</visible>
					</control>
					
					<control type="label">
						<visible>[Container.Content(tvshows) | Container.Content(seasons)] + IsEmpty(Control.GetLabel(7017))</visible>
						<posx>30</posx>
						<posy>430</posy>
						<include>Common_Panel_Title</include>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<shadowcolor>ff000000</shadowcolor>
					</control>
					
					<control type="label">
						<visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
						<visible>!Skin.HasSetting(UseTVLogos)</visible>
						<posx>30</posx>
						<posy>430</posy>
						<include>Common_Panel_Title</include>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<shadowcolor>ff000000</shadowcolor>
					</control>
					
					<control type="label">
						<posx>15</posx>
						<posy>456</posy>
						<width>555</width>
						<height>50</height>
						<align>center</align>
						<font>font26L</font>
						<label>31508</label>
						<visible>Container.Content(movies) + IsEmpty(ListItem.foldername) + !substring(Container.Listitem.Label,..,left) + !Container.Content(genres) + Window.IsActive(videolibrary)</visible>
					</control>
					
					<control type="label">
						<posx>35</posx>
						<posy>436</posy>
						<width>500</width>
						<height>50</height>
						<font>font26L</font>
						<shadowcolor>ff000000</shadowcolor>
						<label>$INFO[ListItem.Year] / $INFO[ListItem.Duration] $LOCALIZE[12391]</label>
						<visible>Container.Content(movies) + !SubString(ListItem.Icon,DefaultFolderBack.png,Left) + !IsEmpty(ListItem.Duration) + !SubString(ListItem.Duration,min)</visible>
					</control>
					
					<control type="label">
						<posx>35</posx>
						<posy>436</posy>
						<width>500</width>
						<height>50</height>
						<font>font26L</font>
						<shadowcolor>ff000000</shadowcolor>
						<label>$INFO[ListItem.Year] / $INFO[ListItem.Duration]</label>
						<visible>Container.Content(movies) + !SubString(ListItem.Icon,DefaultFolderBack.png,Left) + !IsEmpty(ListItem.Duration) + SubString(ListItem.Duration,min)</visible>
					</control>
					
				</control>
				
				<control type="group">
				
					<control type="textbox">
						<visible>[Container.Content(movies) | Container.Content(tvshows)]</visible>
						<posx>30</posx>
						<posy>485</posy>
						<width>500</width>
						<height>150</height>
						<font>font18</font>
						<label>$INFO[ListItem.Plot]</label>
						<align>justify</align>
						<autoscroll time="3000" delay="5000" repeat="5000">true</autoscroll>
					</control>
					
					<control type="grouplist">
						<visible>Container.Content(movies)</visible>
						<description>Media Codec Flagging Images</description>
						<posx>115</posx>
						<posy>635</posy>
						<width>330</width>
						<height>25</height>
						<itemgap>0</itemgap>
						<orientation>horizontal</orientation>
						
						<control type="image">
							<description>Video rez Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.VideoResolution,flags/video/,.png]</texture>
						</control>

						<control type="image">
							<description>Common Codec Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.VideoCodec,flags/video/,.png]</texture>
							<!-- Don't show if its one of the 500 divx codecs -->
							<visible>![substring(ListItem.VideoCodec,div,left) | stringcompare(ListItem.VideoCodec,dx50)]</visible>
						</control>

						<control type="image">
							<description>Divx Codec Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flagsvideo/divx.png</texture>
							<visible>[substring(ListItem.VideoCodec,div,left) | stringcompare(ListItem.VideoCodec,dx50)]</visible>
						</control>

						<control type="image">
							<description>Bluray Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/video/bluray.png</texture>
							<visible>[substring(ListItem.FilenameAndPath,bluray) | substring(ListItem.FilenameAndPath,bdrip)] + !Skin.HasSetting(HideFilenameother_textures/flagging)</visible>
						</control>

						<control type="image">
							<description>HDDVD Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/video/hddvd.png</texture>
							<visible>substring(ListItem.FilenameAndPath,hddvd) + !Skin.HasSetting(HideFilenameother_textures/flagging)</visible>
						</control>

						<control type="image">
							<description>DVD Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/video/dvd.png</texture>
							<visible>[substring(ListItem.FilenameAndPath,dvd) + ![substring(ListItem.FilenameAndPath,hddvd) | substring(ListItem.FilenameAndPath,bluray) | substring(ListItem.FilenameAndPath,bdrip)]] + !Skin.HasSetting(HideFilenameother_textures/flagging)</visible>
						</control>

						<control type="image">
							<description>TV Types Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flagsvideo/TV.png</texture>
							<visible>[substring(ListItem.FilenameAndPath,pdtv) | substring(ListItem.FilenameAndPath,hdtv) | substring(ListItem.FilenameAndPath,dsr)] + !Skin.HasSetting(HideFilenameother_textures/flagging)</visible>
						</control>

						<control type="image">
							<description>VHS Image</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/video/vhs.png</texture>
							<visible>substring(ListItem.FilenameAndPath,vhs) + !Skin.HasSetting(HideFilenameother_textures/flagging)</visible>
						</control>

						<control type="image">
							<description>Rated G</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/mpaa/mpaa_general.png</texture>
							<visible>substring(listitem.mpaa,Rated G)</visible>
						</control>

						<control type="image">
							<description>Rated PG</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/mpaa/mpaa_pg.png</texture>
							<visible>substring(listitem.mpaa,Rated PG) + !substring(listitem.mpaa,Rated PG-13)</visible>
						</control>

						<control type="image">
							<description>Rated PG-13</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/mpaa/mpaa_pg13.png</texture>
							<visible>substring(listitem.mpaa,Rated PG-13)</visible>
						</control>

						<control type="image">
							<description>Rated R</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/mpaa/mpaa_restricted.png</texture>
							<visible>substring(Listitem.mpaa,Rated R)</visible>
						</control>

						<control type="image">
							<description>Rated NC-17</description>
							<width>65</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>flags/mpaa/mpaa_nc17.png</texture>
							<visible>substring(Listitem.mpaa,Rated NC)</visible>
						</control>

						<control type="image">
							<description>Audio Codec Image</description>
							<width>55</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
						</control>

						<control type="image">
							<description>Aspectratio Image</description>
							<width>60</width>
							<height>25</height>
							<aspectratio>keep</aspectratio>
							<texture>$INFO[ListItem.VideoAspect,flags/aspectratio/,.png]</texture>
						</control>
						
					</control>
					
				</control>
				
				<control type="group">
					<visible>Skin.HasSetting(UseNextAiredScript)</visible>
					<posx>20</posx>
					<posy>636</posy>
