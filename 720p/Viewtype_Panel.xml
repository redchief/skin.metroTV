<includes>

	<include name="Viewtype_Panel">
	
		<control type="group">
			<visible>Control.IsVisible(54)</visible>
			
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture background="true">backings/music_fanart_diffuse.png</texture>
				<visible>Skin.HasSetting(UseFanartOverlay)</visible>
			</control>
			
			<include>Common_TopBar</include>		
		
			<control type="panel" id="54">
				<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)] + !Container.Content(Genres)</visible>
				<posx>500</posx>
				<posy>170</posy>
				<width>800</width>
				<height>500</height>
				<scrolltime>300</scrolltime>
				<orientation>horizontal</orientation>
				<viewtype label="Panel">Panel</viewtype>
				<onleft>9000</onleft>
				<onright>54</onright>
				<onup>54</onup>
				<ondown>66</ondown>
				<preloaditems>2</preloaditems>
				<pagecontrol>66</pagecontrol>
				<itemlayout width="175" height="250">
				
					<control type="group">
						<posx>60</posx>
						<posy>16</posy>
						
						<control type="image">
							<posx>1</posx>
							<width>155</width>
							<height>230</height>
							<include>Common_Color_Keyback1</include>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!Container.Content(Genres)</visible>
						</control>
						
						<control type="image">
							<posx>1</posx>
							<width>155</width>
							<height>230</height>
							<texture background="true" fallback="defaults/DefaultAddonNone.png">$INFO[ListItem.Art(poster)]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!Container.Content(Genres) + !stringcompare(ListItem.Label,..)</visible>
						</control>
						
						<control type="image">
							<visible>!Container.Content(Genres) + stringcompare(ListItem.Label,..)</visible>
							<posx>1</posx>
							<width>155</width>
							<height>230</height>
							<texture>defaults/DefaultFolderBack.png</texture>
							<fadetime>100</fadetime>
							<aspectratio scalediffuse="false">keep</aspectratio>
						</control>
						
						<control type="image">
							<posx>1</posx>
							<width>155</width>
							<height>31</height>
							<texture>general/movieset.png</texture>
							<visible>ListItem.IsFolder + Container.Content(movies)</visible>
							<visible>Skin.HasSetting(UseMovieset)</visible>
							<visible>!stringcompare(ListItem.Label,..)</visible>
						</control>
						
						<control type="image">
							<posx>121</posx>
							<posy>5</posy>
							<height>30</height>
							<width>30</width>
							<texture>watched/check.png</texture>
							<visible>[Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(episodes) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(seasons) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
						</control>
						
					</control>
					
				</itemlayout>
				
				<focusedlayout width="300" height="184">
				
					<control type="group">
						<posx>60</posx>
						<posy>16</posy>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="100" end="110" time="300" tween="back" easing="out" />
						</animation>
						
						<control type="image">
							<posx>6</posx>
							<width>155</width>
							<height>230</height>
							<include>Common_Color_Accent</include>
							<fadetime>200</fadetime>
							<aspectratio>stretch</aspectratio>
							<visible>!Container.Content(Genres)</visible>
						</control>
						
						<control type="image">
							<posx>6</posx>
							<width>155</width>
							<height>230</height>
							<texture background="true" fallback="defaults/DefaultAddonNone.png">$INFO[ListItem.Art(poster)]</texture>
							<bordertexture colordiffuse="Accent">colors/color_white.png</bordertexture>
							<bordersize>2</bordersize>
							<fadetime>200</fadetime>
							<aspectratio>stretch</aspectratio>
							<visible>!Container.Content(Genres) + !stringcompare(ListItem.Label,..)</visible>
						</control>
						
						<control type="image">
							<visible>!Container.Content(Genres) + stringcompare(ListItem.Label,..)</visible>
							<posx>1</posx>
							<width>155</width>
							<height>230</height>
							<texture>defaults/DefaultFolderBack.png</texture>
							<fadetime>100</fadetime>
							<aspectratio scalediffuse="false">keep</aspectratio>
						</control>
						
						<control type="image">
							<posx>45</posx>
							<posy>77</posy>
							<width>75</width>
							<height>75</height>
							<texture>general/play_large.png</texture>
							<visible>!Container.Content(Genres)</visible>
							<aspectratio>scale</aspectratio>
							<colordiffuse>Accent80</colordiffuse>
							<visible>!ListItem.IsFolder</visible>
						</control>
						
						<control type="image">
							<posx>11</posx>
							<posy>5</posy>
							<width>145</width>
							<height>29</height>
							<texture>general/movieset.png</texture>
							<visible>ListItem.IsFolder + Container.Content(movies)</visible>
							<visible>Skin.HasSetting(UseMovieset)</visible>
							<visible>!stringcompare(ListItem.Label,..)</visible>
						</control>
						
						<control type="image">
							<posx>121</posx>
							<posy>10</posy>
							<height>30</height>
							<width>30</width>
							<texture>watched/check.png</texture>
							<visible>[Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(episodes) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(seasons) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
						</control>
						
					</control>
					
				</focusedlayout>
				
			</control>
			
			<control type="group">
				<visible>Control.IsVisible(54)</visible>
			
				<control type="image">
