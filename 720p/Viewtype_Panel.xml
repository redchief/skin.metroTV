						<height>22</height>
						<texture>tiles/tv.png</texture>
						<visible>Container.Content(TVShows) | Container.Content(Seasons)</visible>
					</control>
					
					<control type="label">
						<posx>40</posx>
						<width>465</width>
						<height>30</height>
						<font>font20UB</font>
						<label>[B]$LOCALIZE[31173][/B]</label>
						<visible>Container.Content(TVShows) | Container.Content(Seasons)</visible>
					</control>
					
					<control type="label">
