					<posy>314</posy>
					<width>408</width>
					<height>314</height>
					<texture background="true" >$INFO[ListItem.Art(fanart)]</texture>
					<fadetime>200</fadetime>
					<aspectratio align="center">scale</aspectratio>
					<visible>!IsEmpty(ListItem.Art(fanart))</visible>
				 </control>

			 <!--EXTRA FANART-->
