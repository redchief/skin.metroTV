						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
						</animation>				
						
						<control type="image">
							<posx>2</posx>
							<posy>90</posy>
							<width>315</width>
							<height>315</height>
							<texture background="true" fallback="defaults/DefaultAlbumCover.png">$INFO[ListItem.Icon]</texture>
							<bordertexture border="5" colordiffuse="Accent">colors/color_white.png</bordertexture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<bordersize>2</bordersize>
							<visible>!stringcompare(ListItem.Label,..) + Container.Content(Albums)</visible>
						</control>
						
						<control type="image">
							<posx>2</posx>
							<posy>90</posy>
