<includes>

	<include name="Viewtype_Logo">
	
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			
			<include>Common_TopBar</include>

			<control type="image">
				<posy>600</posy>
				<width>1280</width>
				<height>120</height>
				<include>Common_Color_Tile1</include>
				<animation effect="slide" start="0,0" end="0,-40" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(580)">Conditional</animation>
			</control>
			
			<control type="image">
				<posy>600</posy>
				<width>1280</width>
				<height>1</height>
				<include>Common_Color_Accent</include>	
				<animation effect="slide" start="0,0" end="0,-40" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(580)">Conditional</animation>
			</control>
			
			<control type="image">
				<posy>719</posy>
				<width>1280</width>
				<height>1</height>
				<include>Common_Color_Accent</include>
				<animation effect="slide" start="0,0" end="0,-40" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(580)">Conditional</animation>
			</control>
			
			<control type="wraplist" id="58">
				<posx>10</posx>
				<posy>560</posy>
				<height>500</height>
				<width>1280</width>
				<onleft>58</onleft>
				<onright>58</onright>
				<onup>9000</onup>
				<ondown>580</ondown>
				<pagecontrol>580</pagecontrol>
				<viewtype label="fanart- logo">list</viewtype>
				<orientation>horizontal</orientation>
				<scrolltime>300</scrolltime>
				<focusposition>2</focusposition>
				<preloaditems>2</preloaditems>
				<animation effect="slide" start="0,0" end="0,-40" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(580)">Conditional</animation>
				<visible>Container.Content(tvshows) | Container.Content(movies) | Container.Content(artists)</visible>
				<itemlayout width="250" height="225">
				
					<control type="image">
						<visible>[Container.Content(tvshows) | Container.Content(artists)] + !IsEmpty(ListItem.Title) </visible>
						<posx>1</posx>
						<posy>50</posy>
						<width>230</width>
						<height>89</height>
						<texture background="true" fallback="home/unknown.png">$INFO[ListItem.path]logo.png</texture>
						<fadetime>100</fadetime>
						<animation effect="fade" start="40" end="40" time="0" condition="true">conditional</animation>
						<aspectratio scalediffuse="false">keep</aspectratio>
					</control>
					
					<control type="image">
						<visible>stringcompare(ListItem.Label,..)</visible>
						<posx>1</posx>
						<posy>50</posy>
						<width>230</width>
						<height>89</height>
						<texture>defaults/DefaultFolderBack.png</texture>
						<fadetime>100</fadetime>
						<animation effect="fade" start="40" end="40" time="0" condition="true">conditional</animation>
						<aspectratio scalediffuse="false">keep</aspectratio>
					</control>
					
					<control type="image">
						<posx>195</posx>
						<posy>55</posy>
						<height>30</height>
						<width>30</width>
						<texture>watched/check.png</texture>
						<visible>[Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(episodes) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(seasons) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
						<animation effect="fade" start="40" end="40" time="0" condition="true">conditional</animation>
					</control>
					
				</itemlayout>
				
				<focusedlayout width="280" height="1285">
				
					<control type="image">
						<visible>[Container.Content(tvshows) | Container.Content(artists) | Container.Content(movies)] + !IsEmpty(ListItem.Title)</visible>
						<posx>20</posx>
						<posy>50</posy>
						<width>230</width>
						<height>89</height>
						<texture background="true" fallback="home/unknown.png">$INFO[ListItem.path]logo.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">keep</aspectratio>
					</control>
					
					<control type="image">
						<visible>stringcompare(ListItem.Label,..)</visible>
						<posx>20</posx>
						<posy>50</posy>
						<width>230</width>
						<height>89</height>
						<texture>defaults/DefaultFolderBack.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">keep</aspectratio>
					</control>
					
					<control type="image">
						<posx>215</posx>
						<posy>55</posy>
						<height>30</height>
						<width>30</width>
						<texture>watched/check.png</texture>
						<visible>[Container.Content(movies) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(TVShows) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(episodes) + stringcompare(ListItem.Overlay,OverlayWatched.png)] | [Container.Content(seasons) + stringcompare(ListItem.Overlay,OverlayWatched.png)]</visible>
					</control>
					
				</focusedlayout>
				
			</control>
			
			<control type="image">
				<description>outline</description>
				<include>Animation_ZoomInZoomOut</include>
				<animation effect="slide" start="0,0" end="0,-220" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(580)">Conditional</animation>
				<animation effect="fade" time="200">VisibleChange</animation>
				<posx>99</posx>
				<posy>909</posy>
				<width>1082</width>
				<include>Common_Scroll_OutlineH</include>
				<visible>Control.HasFocus(580)</visible>
			</control>
			
			<control type="scrollbar" id="580">
				<include>Animation_ZoomInZoomOut</include>
				<posx>100</posx>
				<posy>910</posy>
				<width>1080</width>
				<height>5</height>
				<visible allowhiddenfocus="true">Control.IsVisible(58) + Control.HasFocus(580)</visible>
				<onup>58</onup>
				<ondown>9000</ondown>
				<showonepage>true</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="slide" start="0,0" end="0,-220" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(580)">Conditional</animation>
			</control>
		
			<control type="group">
				<visible>Skin.HasSetting(UseNextAiredScript)</visible>
				<animation effect="slide" start="0,0" end="0,-40" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(580)">Conditional</animation>
				<posy>560</posy>
				<visible>!IsEmpty(Window(Home).Property(NextAired.Label)) + !stringcompare(ListItem.Label,..) + [Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Episodes)] + !IsEmpty(ListItem.TVShowTitle) + !IsEmpty(Window(Home).Property(NextAired.NextDate))</visible>

				<control type="image">
					<width>1280</width>
					<height>40</height>
					<include>Common_Color_Accent</include>
				</control>
				
				<control type="image">
					<posx>10</posx>
					<posy>5</posy>
					<width>30</width>
					<height>30</height>
					<texture>tiles/tv.png</texture>
					<visible>Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Episodes)</visible>
				</control>
				
				<control type="label">
					<posx>50</posx>
					<width>1200</width>
					<height>40</height>
					<font>font20UB</font>
					<label>[B]$LOCALIZE[31173][/B]</label>
					<visible>Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Episodes)</visible>
				</control>

				<control type="label">
					<posx>210</posx>
					<width>1100</width>
					<height>40</height>
					<font>font20</font>
					<scroll>true</scroll>
					<label>"$INFO[Window(Home).Property(NextAired.NextTitle)]" $LOCALIZE[31177] $INFO[Window(Home).Property(NextAired.NextDate)] - $INFO[Window(Home).Property(NextAired.AirTime)]</label>
					<visible>Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Episodes)</visible>
				</control>

			</control>
		
		</control>
		
	</include>

</includes>