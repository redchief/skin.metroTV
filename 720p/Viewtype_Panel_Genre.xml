<includes>
	<include name="Viewtype_Panel_Genre">
			
		<control type="group">
			<visible>Control.IsVisible(56)</visible>
			<animation type="TYPE" condition="Window.IsVisible(2003)" reversible="false">
				<effect type="slide" end="-1500,0" time="200"/>
			</animation>
			<animation type="TYPE" condition="!Window.IsVisible(2003)" reversible="false">
				<effect type="slide" start="-1500,0" time="200"/>
			</animation>		
			<animation type="WindowClose">
				<effect type="fade" time="300"/>
				<effect type="slide" end="+1500,0" time="300"/>
			</animation>
			<animation type="WindowOpen">
				<effect type="fade" time="300"/>
				<effect type="slide" start="+1500,0" time="300"/>
			</animation>
			<animation effect="fade" time="300">WindowOpen</animation>
			<animation type="WindowClose">
				<effect type="fade" time="300"/>
			</animation>
			
			<control type="panel" id="56">
				<viewtype label="genre panel">genre panel</viewtype>
				<posx>150</posx>
				<posy>340</posy>
				<width>1200</width>
				<height>320</height>
				<scrolltime>200</scrolltime>
				<orientation>horizontal</orientation>
				<onright>-</onright>
				<onleft>9000</onleft>
				<ondown>9000</ondown>
				<pagecontrol>62</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(1) | Container.Content(genres)</visible>
				<itemlayout width="160" height="160">
				
					<control type="image">
						<posx>9</posx>
						<posy>0</posy>
						<width>155</width>
						<height>155</height>
						<include>Common_Color_Tile1</include>
						<visible>!Skin.HasSetting(TileBackground)</visible>
					</control>
					
					<control type="image">
						<posx>9</posx>
						<posy>0</posy>
						<width>155</width>
						<height>155</height>
						<include>Common_Color_Keyback1</include>
						<visible>Skin.HasSetting(TileBackground)</visible>
					</control>
					
					<control type="image">
						<posx>36</posx>
						<posy>18</posy>
						<width>100</width>
						<height>100</height>
						<texture background="true" fallback="home/unknown.png">genres/$INFO[ListItem.Label].png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!stringcompare(ListItem.Label,..)</visible>
					</control>
					
					<control type="image">
						<posx>36</posx>
						<posy>18</posy>
						<width>100</width>
						<height>100</height>
						<texture background="true">defaults/DefaultFolderBack.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>stringcompare(ListItem.Label,..)</visible>
					</control>
					
					<control type="label" fallback="unknown">
						<label>  $INFO[ListItem.Label]</label>
						<include>Common_HomeTile_Label</include>
						<visible>!stringcompare(ListItem.Label,..)</visible>
					</control>
					
				</itemlayout>
				
				<focusedlayout width="159" height="159">
				
					<control type="image">
						<posx>9</posx>
						<posy></posy>
						<width>155</width>
						<height>155</height>
						<include>Common_Color_Accent</include>
					</control>
					
					<control type="image">
						<posx>36</posx>
						<posy>18</posy>
						<width>100</width>
						<height>100</height>
						<texture background="true" fallback="home/unknown.png">genres/$INFO[ListItem.Label].png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!stringcompare(ListItem.Label,..)</visible>
					</control>
					
					<control type="image">
						<posx>36</posx>
						<posy>18</posy>
						<width>100</width>
						<height>100</height>
						<texture background="true">defaults/DefaultFolderBack.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>stringcompare(ListItem.Label,..)</visible>
					</control>
					
					<control type="label">
						<label fallback="unknown">  $INFO[ListItem.Label]</label>
						<include>Common_HomeTile_Label</include>
						<visible>!stringcompare(ListItem.Label,..)</visible>
					</control>
					
				</focusedlayout>
				
			</control>
		
			<control type="fadelabel" id="140">
				<posx>175</posx>
				<posy>250</posy>
				<height>30</height>
				<width>900</width>
				<font>font40UB</font>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>true</visible>
				<scroll>true</scroll>
				<scrollout>false</scrollout>
				<pauseatend>600</pauseatend>
				<scrollspeed>50</scrollspeed>
				<shadowcolor>ff000000</shadowcolor>
				<visible>Container.Content(Genres) + !stringcompare(ListItem.Label,..)</visible>
			</control>
			
			<control type="label">
				<posx>175</posx>
				<posy>250</posy>
				<height>30</height>
				<width>900</width>
				<font>font40UB</font>
				<aligny>top</aligny>
				<label>$LOCALIZE[31194]</label>
				<shadowcolor>ff000000</shadowcolor>
				<visible>Container.Content(Genres) + stringcompare(ListItem.Label,..)</visible>
			</control>
			
		</control>	

		<control type="group">
			<visible>Control.IsVisible(56)</visible>		
			<include>Common_TopBar</include>
		</control>		

	</include>
	
</includes>