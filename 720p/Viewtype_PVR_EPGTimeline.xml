<?xml version="1.0" encoding="utf-8"?>

<includes>

    <include name="EPGTimelineView">
	
		<include>Common_TopBar</include>
		
        <control type="group">
			<animation effect="fade" time="400">VisibleChange</animation>
			<animation effect="slide" start="+1200,0" time="500" easing="out" tween="cubic" delay="1000" condition="Skin.HasSetting(MetroAnimations)">WindowOpen</animation>
			<animation effect="slide" start="+1200,0" time="500" easing="out" tween="cubic" reversible="false" delay="1000" condition="Skin.HasSetting(MetroAnimations)">WindowOpen</animation>	
			<animation effect="slide" start="+1200,0" time="500" easing="out" tween="cubic" delay="300" condition="!Skin.HasSetting(MetroAnimations)">WindowOpen</animation>
			<animation effect="slide" start="+1200,0" time="500" easing="out" tween="cubic" reversible="false" delay="300" condition="!Skin.HasSetting(MetroAnimations)">WindowOpen</animation>	
			<posy>130</posy>
			<posx>76</posx>
            <description>TV Guide Timeline</description>
            <visible>Control.IsVisible(10)</visible>
			
			<control type="image">
				<description>horizontal bar</description>
				<posx>-76</posx>
				<posy>-10</posy>
				<width>1280</width>
				<height>580</height>
				<include>Common_Color_Tile1</include>
			</control>
			
			<control type="label">
				<width>600</width>
				<height>50</height>
				<font>font40UB</font>
				<label>[COLOR Accent]$INFO[Control.GetLabel(29),[COLOR White]$LOCALIZE[31084] [/COLOR]][/COLOR]</label>
			</control>
			
			<control type="label">
                <posx>319</posx>
                <width>600</width>
                <height>50</height>
                <font>font40UB</font>
                <label>[COLOR Accent]$INFO[Control.GetLabel(30),[COLOR White]$LOCALIZE[31178]: [/COLOR]][/COLOR]</label>
            </control>
			
            <control type="epggrid" id="10">
                <description>EPG Grid</description>
                <posy>58</posy>
                <width>1204</width>
                <height>325</height>
                <pagecontrol>10</pagecontrol>
                <scrolltime>350</scrolltime>
                <timeblocks>40</timeblocks>
                <rulerunit>6</rulerunit>
                <onleft>31</onleft>
                <onright>31</onright>
                <onup>10</onup>
                <ondown>10</ondown>
				<progresstexture border="5">colors/color_white.png</progresstexture>
                <rulerlayout height="47" width="40">
				
                    <control type="label" id="2">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>40</width>
						<font>font20UB</font>
                        <label>|   $INFO[ListItem.Label]</label>
                    </control>
					
                </rulerlayout>
				
                <channellayout height="47" width="240">
                    <animation effect="fade" start="110" time="200">UnFocus</animation>
					
					<control type="image">
						<width>65</width>
						<height>45</height>
						<include>Common_Color_Keyback2</include>
					</control>
					
					<control type="image">
						<posx>67</posx>
						<width>200</width>
						<height>45</height>
						<include>Common_Color_Keyback2</include>
					</control>
					
					<control type="label">
						<posx>87</posx>
						<width>160</width>
						<font>font20UB</font>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>
					
					<control type="label">
						<posx>32</posx>
						<width>65</width>
						<align>center</align>
						<font>font20UB</font>
						<label>[B]$INFO[ListItem.ChannelNumber][/B]</label>						
					</control>
					
                </channellayout>
				
                <focusedchannellayout height="47" width="280">
                    <animation effect="fade" start="110" time="200">OnFocus</animation>
					
					<control type="image">
						<width>65</width>
						<height>45</height>
						<include>Common_Color_Accent</include>
					</control>
					
					<control type="image">
						<posx>67</posx>
						<width>200</width>
						<height>45</height>
						<include>Common_Color_Accent</include>
					</control>
					
					<control type="label">
						<posx>87</posx>
						<width>160</width>
						<font>font20UB</font>
						<label>$INFO[ListItem.ChannelName]</label>
					</control>
					
					<control type="label">
						<posx>32</posx>
						<width>65</width>
						<align>center</align>
						<font>font20UB</font>
						<label>[B]$INFO[ListItem.ChannelNumber][/B]</label>						
					</control>
					
                </focusedchannellayout>
				
                <itemlayout height="47" width="142">
				
 					<control type="image" id="2">
						<posx>2</posx>
						<width>140</width>
						<height>45</height>
						<include>Common_Color_Keyback1</include>
					</control>
					
					<control type="image" id="2">
						<posx>2</posx>
						<width>140</width>
						<height>45</height>
						<aspectratio>stretch</aspectratio>
						<texture border="5">colors/color_maroon.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					
					<control type="label" id="1">
                        <posx>10</posx>
                        <width>120</width>
						<font>font20</font>
                        <info>ListItem.Label</info>
                    </control>
					
                    <control type="image">
                        <posx>5</posx>
                        <posy>28</posy>
                        <width>30</width>
                        <height>20</height>
                        <texture>home/recordings.png</texture>
                        <visible>ListItem.IsRecording</visible>
                    </control>
					
                    <control type="image">
                        <posx>5</posx>
                        <posy>28</posy>
                        <width>20</width>
                        <height>20</height>
                        <texture>home/recent.png</texture>
                        <visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
                    </control>
					
                </itemlayout>
				
                <focusedlayout height="45" width="142">
				
				 	<control type="image" id="2">
						<posx>2</posx>
						<width>140</width>
						<height>45</height>
						<include>Common_Color_Accent</include>
					</control>
					
                    <control type="fadelabel" id="1">
                        <posx>10</posx>
                        <width>120</width>
						<font>font20</font>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
					
                    <control type="image">
                        <posx>5</posx>
                        <posy>28</posy>
                        <width>30</width>
                        <height>20</height>
                        <texture>home/recordings.png</texture>
                        <visible>ListItem.IsRecording</visible>
                    </control>
					
                    <control type="image">
                        <posx>5</posx>
                        <posy>28</posy>
                        <width>20</width>
                        <height>20</height>
                        <texture>home/recent.png</texture>
                        <visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
                    </control>
					
                </focusedlayout>
				
            </control>
			
			<control type="group">
				<posy>385</posy>	
				
				<control type="image">
					<width>1204</width>
					<height>160</height>
					<include>Common_Color_Keyback2</include>
				</control>
				
				<control type="image">
					<posx>10</posx>
					<posy>10</posy>
					<width>140</width>
					<height>140</height>
					<include>Common_Color_Nokey</include>
				</control>
				
				<control type="image">
					<posx>10</posx>
					<posy>10</posy>
					<width>140</width>
					<height>140</height>
					<texture fallback="defaults/DefaultVideo.png" background="true">$INFO[ListItem.Icon]</texture>
				</control>

				<control type="fadelabel">
					<label>$INFO[ListItem.Title]</label>
					<posx>160</posx>
					<posy>5</posy>
					<height>30</height>
					<width>745</width>
					<font>font32UB</font>
					<scroll>true</scroll>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>50</scrollspeed>
					<aligny>top</aligny>
					<textcolor>Accent</textcolor>
				</control>
				
				<control type="label">
					<posx>1184</posx>
					<posy>5</posy>
					<width>300</width>
					<height>30</height>
					<font>font22UB</font>
					<align>right</align>
					<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
					<scroll>true</scroll>
				</control>
				
				<control type="label">
					<posx>160</posx>
					<posy>40</posy>
					<width>745</width>
					<height>30</height>
					<font>font20UB</font>
					<align>left</align>
					<label>$INFO[ListItem.Genre]</label>
					<scroll>true</scroll>
				</control>
				
				<control type="textbox">
					<posx>160</posx>
					<posy>70</posy>
					<width>960</width>
					<height>80</height>
					<align>justify</align>
					<autoscroll time="3000" delay="6000" repeat="8000"></autoscroll>
					<font>font20</font>
					<textcolor>White</textcolor>
					<label>$INFO[ListItem.Plot]</label>
				</control>
				
			</control>
			
        </control>
		
    </include>

</includes>